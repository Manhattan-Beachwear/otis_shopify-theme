<div
  class="featured-collection-block"
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "t:names.featured_collection",
  "tag": null,
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:settings.collection"
    },
    {
      "type": "header",
      "content": "Combined Listings"
    },
    {
      "type": "checkbox",
      "id": "enable_combined_listings",
      "label": "Enable Combined Listings",
      "default": false,
      "info": "When enabled, products linked via combined listing metafield will appear as a single product with color variant swatches"
    }
  ],
  "presets": []
}
{% endschema %}
