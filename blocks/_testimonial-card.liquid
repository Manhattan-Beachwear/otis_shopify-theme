{%- capture children %}
  {% content_for 'blocks' %}
{% endcapture %}

{%- assign block_settings = block.settings -%}

<div
  class="
    testimonial-card
    testimonial-card--height-{{ block_settings.height }}
    testimonial-card--width-{{ block_settings.width }}
    border-style
    spacing-style
    size-style
    {% if block_settings.inherit_color_scheme == false %} color-{{ block_settings.color_scheme }}{% endif %}
  "
  style="
    {% render 'border-override', settings: block_settings %}
    {% render 'spacing-style', settings: block_settings %}
    {% render 'size-style', settings: block_settings %}
    {% if block_settings.background_color != blank %}
      --testimonial-card-background: {{ block_settings.background_color }};
    {% endif %}
    {% if block_settings.box_shadow %}
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    {% endif %}
  "
  {{ block.shopify_attributes }}
  data-testid="testimonial-card"
>
  <div
    class="
      testimonial-card-content
      {% if request.design_mode %}testimonial-card-content--design-mode{% endif %}
      layout-panel-flex
      layout-panel-flex--{{ block_settings.content_direction | default: 'column' }}
      {% if block_settings.vertical_on_mobile %} mobile-column{% endif %}
    "
    style="{% render 'layout-panel-style', settings: block_settings %}"
  >
    {{- children -}}
  </div>
</div>

{% stylesheet %}
  .testimonial-card {
    background-color: var(--testimonial-card-background, rgb(var(--color-background)));
    border-radius: var(--border-radius, 0);
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: fit-content;
  }

  .testimonial-card-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    gap: var(--gap, 12px);
  }

  /* Ensure nested blocks have proper spacing */
  .testimonial-card-content > * {
    width: 100%;
  }

  /* Typography defaults for testimonial content */
  .testimonial-card-content .text {
    text-align: center;
  }

  .testimonial-card-content .testimonial-rating-wrapper {
    justify-content: center;
  }
{% endstylesheet %}

