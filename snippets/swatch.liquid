{%- doc -%}
  Renders a swatch

  @param {object} swatch - a swatch object
  @param {object} [variant_image] - an alternate image
  @param {string} [mode] - one of 'unscaled' or 'filter'
  @param {string} [option_value_name] - the option value name for assets folder backup
  @param {boolean} [enable_swatch_assets_backup] - Enable assets folder backup (defaults to settings.enable_swatch_assets_backup)
  @param {string} [swatch_file_extension] - Swatch file extension (defaults to settings.swatch_file_extension or 'png')
  @param {boolean} [show_variant_image] - Show variant image fallback (defaults to settings.show_variant_image)
  @param {number} [variant_swatch_width] - Variant swatch width (defaults to settings.variant_swatch_width)
  @param {boolean} [force_image_swatch] - Force using variant_image as swatch, skip all other priorities
  @param {boolean} [force_image_swatch] - Force using variant_image as swatch, skip all other priorities

  @example
  {% render 'swatch', swatch: swatch, variant_image: variant_image, mode: 'unscaled' %}
{%- enddoc -%}

{% liquid
  assign swatch_value = null
  
  # Get settings from parameters or fall back to global settings
  if enable_swatch_assets_backup != blank
    assign enable_backup = enable_swatch_assets_backup
  else
    assign enable_backup = settings.enable_swatch_assets_backup
    if enable_backup == blank
      assign enable_backup = true
    endif
  endif
  
  if swatch_file_extension != blank
    assign swatch_file_ext = swatch_file_extension
  else
    assign swatch_file_ext = settings.swatch_file_extension | default: 'png'
  endif
  
  if show_variant_image != blank
    assign show_variant_img = show_variant_image
  else
    assign show_variant_img = settings.show_variant_image
  endif
  
  if variant_swatch_width != blank
    assign variant_swatch_w = variant_swatch_width
  else
    assign variant_swatch_w = settings.variant_swatch_width
  endif
  
  if force_image_swatch and variant_image
    assign swatch_image_width = 120
    assign swatch_image_url = variant_image | image_url: width: swatch_image_width
    assign swatch_value = 'url(' | append: swatch_image_url | append: ')'
  endif
  
  if force_image_swatch and variant_image
    assign swatch_image_width = 120
    assign swatch_image_url = variant_image | image_url: width: swatch_image_width
    assign swatch_value = 'url(' | append: swatch_image_url | append: ')'
  endif
  
  assign force_image_swatch_url = ''
  if force_image_swatch and variant_image
    assign swatch_image_width = 120
    assign image_for_swatch_url = variant_image.preview_image | default: variant_image
    assign swatch_image_url = image_for_swatch_url | image_url: width: swatch_image_width
    if swatch_image_url != blank
      assign swatch_value = 'url(' | append: swatch_image_url | append: ')'
      assign force_image_swatch_url = swatch_image_url
    endif
  endif
  
  # Priority 1: Look for matching image with the same name (handleized) as the swatch name (skip when forcing variant image)
  if swatch_value == null and option_value_name != blank and force_image_swatch != true
    if enable_backup
      assign color_file_name = option_value_name | handle | append: '.' | append: swatch_file_ext
      assign color_image = color_file_name | file_img_url: '50x50' | prepend: 'https:' | split: '?' | first
      
      if images[color_file_name] != blank
        assign swatch_value = 'url(' | append: color_image | append: ')'
      endif
    endif
  endif
  
  # Priority 2: Look for the image or color set in the Category metaobject (this already exists)
  if swatch_value == null
    if swatch.image
      assign swatch_image_url = swatch.image | image_url: width: 80
      assign swatch_value = 'url(' | append: swatch_image_url | append: ')'
    elsif swatch.color
      assign swatch_value = 'rgb(' | append: swatch.color.rgb | append: ')'
    endif
  endif
  
  # Priority 3: Try to match the swatch color with the color name (skip when forcing variant image so we show image or unavailable only)
  if swatch_value == null and option_value_name != blank and force_image_swatch != true
    # Extract color name from option value and try to use it as CSS color
    assign color_name = option_value_name | split: ' ' | last | handle
    assign swatch_value = color_name
  endif
  
  # Priority 4: Variant image fallback (if setting enabled)
  if swatch_value == null and show_variant_img and variant_image
    assign swatch_image_width = variant_swatch_w | times: 2
    assign image_for_swatch_url = variant_image.preview_image | default: variant_image
    assign swatch_image_url = image_for_swatch_url | image_url: width: swatch_image_width
    if swatch_image_url != blank
      assign swatch_value = 'url(' | append: swatch_image_url | append: ')'
    endif
  endif
  
  # Button fallback (Priority 5): swatch_value remains null, will show as unavailable

  case mode
    when 'unscaled'
      assign extra_classes = ' swatch--unscaled'
    when 'filter'
      assign extra_classes = ' swatch--filter'
    when 'pill'
      assign extra_classes = ' swatch--pill'
    else
      assign extra_classes = ''
  endcase
%}

<span
  class="swatch{{ extra_classes }}{% if swatch_value == null %} swatch--unavailable{% endif %}"
  style="--swatch-background: {{ swatch_value }};{% if swatch.image and show_variant_img == false %} --swatch-focal-point: {{ swatch.image.presentation.focal_point }};{% endif %}"
>
  {% if force_image_swatch and force_image_swatch_url != blank %}
    <img
      class="swatch__image"
      src="{{ force_image_swatch_url }}"
      alt=""
      width="120"
      height="120"
      loading="lazy"
    >
  {% endif %}
</span>
